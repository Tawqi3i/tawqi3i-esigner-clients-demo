@page "/"
@rendermode InteractiveWebAssembly
@inject NavigationManager Navigation

<PageTitle>ESigner - Home</PageTitle>

<div class="alert alert-secondary" role="alert">

    <h1>Welcome</h1>

    <p>This is a demo app to demonstrate the integration workflow of ESigner API & SANAD for authentication and signing for client side application with a backend.</p>
    <br/>
    <p><b class="text-danger">Note: </b>Configure ESignerUrl, RedirectUrl, and SigninPageUrl in <b>appsettings.json</b>. RedirectUrl can be frontend or backend endpoint based on your workflow.</p>
</div>

<button class="btn btn-primary" onclick="@GetStarted">Get Started</button>

@code {

    private void GetStarted()
    {
        Navigation.NavigateTo("/sanad1");
    }
}